<%- include("../partials/header")%>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View awesome campgrounds from all over the world!</p>
            <p class="btn btn-lg btn-primary"><a href="/campgrounds/new">ADD A NEW CAMPGROUND!</a></p>
    
        </div>
       
    </header>
    
    <div class="row" style="display:flex;flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){%>
            <div class="col-md-3 col-sm-6">
               
                <div class="thumbnail">
                    <img src="<%= campground.image %>" alt="img">
                </div>
                <div class="caption text-center"> <h4><%= campground.name%></h4></div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            <!-- the id is automatically generated from mongodb -->
            </div>
        <%}); %>
    </div>
</div>
<%- include("../partials/footer") %>